@{
    ViewBag.Title = "Queue";
}

<script src='@Href("/Scripts/app/appOrdersQueue.js")'></script>
<script>
    $(document).ready(function () {
        var chat = $.connection.gridHub;
        chat.client.refreshGrid = function () {
            var scope = angular.element("#QueueController").scope();
            scope.refreshGrid();
        };
        $.connection.hub.start();
    });
</script>

<div ng-app>
<div id="QueueController" ng-controller="OrdersQueueCtrl">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Item</th>
                <th>Status</th>
                <th>Enter Date</th>
                <th>Worker</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="order in orders">
                <td>{{order.customerName}}</td> 
                <td>{{order.itemName}}</td> 
                <td>{{order.status}}</td> 
                <td>{{order.createdDate}}</td> 
                <td>{{order.worker}}</td> 
            </tr>
        </tbody>
    </table>
</div>
</div>
 