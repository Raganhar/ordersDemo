@{
    ViewBag.Title = "Index";
}

<script src='@Href("/Scripts/app/appOrders.js")'></script>
<script>
    $(document).ready(function() {
        var chat = $.connection.gridHub;
        $.connection.hub.start();
    });
    
     items = @Html.Raw(ServiceStack.Text.JsonSerializer.SerializeToString(Model));
</script>

<div ng-app>
    <div ng-controller="OrderCtrl">
        <p>&nbsp;</p>
        
        <table class="table table-striped">
        <tbody>
        <tr data-ng-repeat="itemSet in itemSets">
            <td data-ng-repeat="item in itemSet" ng-click="openModal(item)">
                <img ng-src="{{getImgPath(item.value.id)}}"><br/>
                {{item.value.name}}
            </td>
        </tr>
        </tbody>
        </table>
        
        <!-- Modal Orders Window -->
        <div id="modalOrders" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-body">
                <form class="form-horizontal">
                    <input type="hidden" ng-model="newOrderItemId"/>
                    <div class="control-group">
                        <label class="control-label">Customer</label>
                        <div class="controls">
                            <input type="text" ng-model="newOrderCustomerFirstName" placeholder="First Name" class="input-small"/> &nbsp;
                            <input type="text" ng-model="newOrderCustomerLastName" placeholder="Last Name" class="input-small"/> 
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Item</label>
                        <div class="controls">
                            <input type="text" ng-model="newOrderItemName" placeholder="Item"/> 
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Quantity</label>
                        <div class="controls">
                            <input type="text" class="input-mini" ng-model="newOrderQuantity" placeholder="Quantity"/> 
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
                <button class="btn btn-primary" ng-click="addOrder()">Save</button>
            </div>
        </div>

    </div>
</div>